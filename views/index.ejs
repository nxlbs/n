<%- include('partials/header', {
    title: name,
    description: description
}) %>

<div class="text-left mb-6">
    <p class="text-slate-800 text-xs mb-4">Hi Visitor! Welcome To</p>
    <h2 class="flex flex-wrap items-center gap-1 text-3xl text-slate-900 font-bold mb-1.5">
        <span class="flex-grow"><%= name %></span>
        <span class="text-xs font-bold text-white bg-slate-900 px-3 py-1 whitespace-nowrap">
            <%= version %>
        </span>
    </h2>
    <p class="text-slate-600 text-xs mx-auto mb-4"><%= description %></p>
    
    <% if (links && links.length > 0) { %>
        <div class="text-xs space-y-1">
            <% links.forEach(function(link) { %>
                <div>
                    <a href="<%= link.url %>" target="_blank" class="text-slate-900 underline"><%= link.title %></a>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<% if (current_status === 'maintenance') { %>
    <div class="bg-yellow-50 border border-yellow-200 p-4">
        <div class="flex items-start">
            <span class="material-icons text-yellow-600 text-lg mr-3 flex-shrink-0">warning</span>
            <div class="flex-1">
                <div class="font-bold text-sm text-yellow-800 mb-1">System Maintenance</div>
                <div class="text-xs text-yellow-700">
                    The API is currently under maintenance. Some endpoints may not work properly or may experience delays. We apologize for any inconvenience.
                </div>
            </div>
        </div>
    </div>
<% } else if (current_status === 'error') { %>
    <div class="bg-red-50 border border-red-200 p-4">
        <div class="flex items-start">
            <span class="material-icons text-red-600 text-lg mr-3 flex-shrink-0">error</span>
            <div class="flex-1">
                <div class="font-bold text-sm text-red-800 mb-1">Service Error</div>
                <div class="text-xs text-red-700">
                    The API is currently experiencing technical difficulties. Most endpoints are unavailable at this time. Our team is working to resolve this issue as soon as possible.
                </div>
            </div>
        </div>
    </div>
<% } %>

<div class="bg-white border border-gray-200 p-4 my-3">
    <div class="grid grid-cols-2 gap-4">
        <div class="text-center">
            <div class="text-lg font-bold text-slate-900">
                <% if (endpoints && endpoints.length > 0) { %>
                    <%= endpoints.reduce((total, category) => total + category.items.length, 0) %>
                <% } else { %>
                    0
                <% } %>
            </div>
            <div class="text-xs text-slate-600">Total Endpoints</div>
        </div>
        <div class="text-center">
            <div class="text-lg font-bold text-slate-900">
                <% if (endpoints && endpoints.length > 0) { %>
                    <%= endpoints.length %>
                <% } else { %>
                    0
                <% } %>
            </div>
            <div class="text-xs text-slate-600">Categories</div>
        </div>
    </div>
</div>

<div class="space-y-3">
    <% if (endpoints && endpoints.length > 0) { %>
        <% endpoints.forEach((category, categoryIndex) => { %>
            <% 
                const categorySlug = category.name.toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .trim();
                
                const categoryConfig = categories[categorySlug] || {};
                const categoryType = categoryConfig.type || 'application/json';
                const categoryDesc = categoryConfig.description || '-';
            %>
            <a href="/category/<%= categorySlug %>" class="block">
                <div class="bg-white border border-gray-200 hover:border-gray-600">
                    <div class="px-4 py-4 flex items-center justify-between">
                        <div class="flex items-center min-w-0 flex-1">
                            <span class="material-icons text-xl mr-4 text-white bg-slate-900 py-1 px-2">folder</span>
                            <div class="flex flex-col min-w-0 flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <h3 class="font-bold text-sm text-slate-900 truncate"><%= category.name %></h3>
                                    <span class="text-xs font-bold text-gray-400">
                                        (<%= category.items.length %>)
                                    </span>
                                </div>
                                <p class="text-xs text-gray-600"><%= categoryType %></p>
                            </div>
                        </div>
                        <span class="material-icons text-gray-600">chevron_right</span>
                    </div>
                </div>
            </a>
        <% }) %>
    <% } else { %>
        <div class="text-center py-16">
            <div class="max-w-md mx-auto">
                <span class="material-icons text-gray-400 text-5xl mb-3">api</span>
                <h3 class="text-sm text-slate-700 mb-2">No API categories available yet.</h3>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer', { name: name }) %>